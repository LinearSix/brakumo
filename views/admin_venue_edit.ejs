                        <div class="div_admin_input"><input type="text" size="42" name="ven_city" value="<%= venues[0].ven_city %>"></div>
                        <div class="div_admin_input"><select name="ven_state">
                                <option selected value="<%= venues[0].ven_state %>"><%= venues[0].ven_state %></option>
